{
  "name": "audio-track-selector",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop media player that mixes multiple embedded audio tracks during playback.",
  "main": "main/dist/main.js",
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:main:watch\" \"npm:dev:main:run\"",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "dev:main:watch": "tsc -p main/tsconfig.json -w",
    "dev:main:run": "wait-on main/dist/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "build:main": "tsc -p main/tsconfig.json",
    "lint": "eslint \"main/src/**/*.{ts,tsx}\" \"renderer/src/**/*.{ts,tsx}\" \"shared/src/**/*.ts\"",
    "package": "npm run build && electron-builder --config build/electron-builder.json"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  }
}
